<% form_for(:weekday, :url => {:action=> 'create'}) do |f| %>
  <ul id="category-list">
    <%= f.hidden_field :batch_id, :value => @batch.try(:id) %>
    <% @default_weekdays.each_pair do |key,value| %>
      <li class="list<%=cycle('odd','even') %>">
        <div class="category-name"><%= t(value.downcase) %></div>
        <div class="category-edit"><%= check_box_tag "weekdays[]", key, @weekday_set.weekday_ids.include?(key.to_i)%></div>
      </li>
    <% end %>
  </ul>
  <%= submit_tag "â–º #{t('save')}", :confirm=>"#{t('alter_message')}",:class=>'submit_button' %>
<% end %>

