<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('transactions') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('finance_transactions_view') %></div>
<div id="inner-tab-menu">
  <ul>
    <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('pdf_report')}",
        {:controller => "finance", :action => "transaction_pdf", :start_date => @start_date, :end_date=>@end_date},:target => '_blank' %></li>
  </ul>
</div>
</div>
<div id="page-yield">
  <div class="bread_crumb">

    <%= link_to t('finance_text'), :controller => "finance", :action=>"index" %> <div class = "bread-crumb-separator"> > </div>
    <%= link_to "#{t('finance_reports')}", :controller => "finance", :action => "finance_reports" %><div class = "bread-crumb-separator"> > </div>
    <%= link_to "#{t('monthly_transactions')}", :controller => "finance", :action => "monthly_report" %><div class = "bread-crumb-separator"> > </div>

    <%= t('finance_transactions_view') %>
  </div>
  <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">

    <tr class="tr-head">
      <td><%= t('sl_no') %></td>
      <td><%= t('particulars') %></td>
      <td><%= t('expenses') %> ( <%= currency %> )</td>
      <td><%= t('income') %> ( <%= currency %> )</td>
    </tr>
    <tr class="tr-blank"></tr>
    <% index = 0  %>
    <%income_total = 0%>
    <%expenses_total = 0%>

    <% unless @hr.nil? %>

      <tr class="tr-odd">
        <td class="col-1"><%= index+=1 %></td>
       
        <% unless @salary == 0 %>
          <td class="col-2"><%= link_to "#{t('salary_account')}" , :action => 'salary_department' , :start_date => @start_date,:end_date => @end_date%> </td>
        <% else %>
          <td class="col-2"><%= t('salary_account') %></td>
        <% end %>

        <td class="col-3" align="right"><%= precision_label(@salary)%></td>

        <td> </td>

      </tr>

    <% end %>

    <tr class="tr-even">
      <td class="col-1"><%= index+=1 %></td>
      <% unless @donations_total == 0 %>
        <td class="col-2"><%= link_to "#{t('donations')}" , :action => 'donations_report',:start_date => @start_date,:end_date => @end_date%></td>
      <% else %>
        <td class="col-2"><%= t('donations') %></td>
      <% end %>
      <td></td>
      <td class="col-3" align="right"><%=precision_label(@donations_total)%></td>

    </tr>


    <tr class="tr-odd">
      <td class="col-1"><%= index+=1 %></td>
      <% unless @transactions_fees == 0 %>
        <td class="col-2"><%= link_to "#{t('fees_account')}" , :action => 'fees_report' , :start_date => @start_date,:end_date => @end_date%> </td>
      <% else %>
        <td class="col-2"><%= t('fees_account') %></td>
      <% end %>
      <td></td>
      <td class="col-3" align="right"><%= precision_label(@transactions_fees)%></td>

    </tr>
    <% FedenaPlugin::FINANCE_CATEGORY.each do |category| %>
      <tr class="tr-<%=cycle('even','odd')%>">
        <td class="col-1"><%= index+=1 %></td>
        <td class="col-2"><%= link_to "#{t(category[:category_name]+'_account')}" , category[:destination].merge(:start_date => @start_date,:end_date => @end_date)%> </td>
        <% if @category_transaction_totals["#{category[:category_name]}"][:category_type] == "income"   %>
          <td></td>
          <td class="col-3" align="right">
            <%= precision_label @category_transaction_totals["#{category[:category_name]}"][:amount]%>
          </td>
        <% else %>
          <td class="col-3" align="right">
            <%= precision_label @category_transaction_totals["#{category[:category_name]}"][:amount]%>
          </td>
          <td></td>
        <% end %>

      </tr>
    <% end %>

    <% @other_transaction_categories.each_with_index do |t,i| %>
      <% income = t.total_income(@start_date,@end_date) %>
      <% expense = t.total_expense(@start_date,@end_date) %>
      <tr class="tr-<%= cycle("even","odd") %>">
        <td class ="col-1"><%=i+index+1%></td>
        <td class="col-2"><%= link_to t.name,:controller => "finance",:action => "income_details",:start_date => @start_date,:end_date => @end_date,:id => t.id %> </td>
        <td class="col-3" align="right"><%= precision_label(expense) %></td>
        <td class="col-3" align="right"><%= precision_label(income) %></td>

        <%income_total +=income %>
        <%expenses_total +=expense %>
      </tr>
    <%end%>
    <tr class="tr-blank"></tr>
    <tr class="tr-odd">
      <td class="col-1"> </td>
      <td class="col-2"><%= t('grand_total') %></td>
      <% if @grand_total >= 0 %>
        <td></td>
        <td class="col-3" align="right">
          <%= precision_label(@grand_total)%>
        </td>

      <% else %>

        <td class="col-3" align="right">
          <%= precision_label(@grand_total * -1)%>
        </td>
        <td></td>
      <% end %>

    </tr>

  </table>

  <br/>
  <br/>
  <% unless @salary == 0 and @donations_total == 0 and @transactions_fees and @other_transactions.nil? %>
    <script type="text/javascript" src="/javascripts/swfobject.js"></script>
    <%= @graph %>
  <% end %>

</div>
