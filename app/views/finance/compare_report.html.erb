<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('transactions') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('monthly_transactions') %></div>

</div>
<div id="page-yield">
  <div class="box">
  <div id="report">
    <% form_for :report, :url => {:action => 'report_compare'} do |form| %>
      <div class="label-field-pair">
        <label>
          <%= t('select_start_date') %>:
        </label>
        <div class="text-input-bg">
          <%= calendar_date_select_tag 'start_date', I18n.l(Date.today,:format=>:default) ,:popup=>:force%>
        </div>
      </div>
      <div class="label-field-pair">
        <label>
          <%= t('select_end_date') %>:
        </label>
        <div class="text-input-bg">
          <%= calendar_date_select_tag 'end_date',I18n.l(Date.today,:format=>:default) ,:popup=>:force%>
        </div>
      </div>
    <h4><%= t('compare_with') %> </h4>
      <div class="label-field-pair">
        <label>
          <%= t('select_start_date') %>:
        </label>
        <div class="text-input-bg">
          <%= calendar_date_select_tag 'start_date2', I18n.l(Date.today,:format=>:default) ,:popup=>:force%>
        </div>
      </div>
      <div class="label-field-pair">
        <label>
          <%= t('select_end_date') %>:
        </label>
        <div class="text-input-bg">
          <%= calendar_date_select_tag 'end_date2', I18n.l(Date.today,:format=>:default) ,:popup=>:force%>
        </div>
      </div>
    <div class="submit-btn" ><%=  link_to_function "â–º #{t('get_report')}","submit_form();",{:class=>'user_button'} %></div>
    <%end%>
  </div>
</div>
</div>

<script type="text/javascript">
function submit_form(){
  url="/finance/report_compare?start_date="+j('#start_date')[0].value+"&end_date="+j('#end_date')[0].value+"&start_date2="+j('#start_date2')[0].value+"&end_date2="+j('#end_date2')[0].value
  window.location.href=url
}

</script>
