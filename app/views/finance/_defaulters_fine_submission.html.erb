<% if @due_date.to_date < Date.today %>
  <div id="fee-defaulters">
    <div class="text_box">
      <h5><%= t('due_date_exceeded_collect_fine') %> : </h5>
    </div>
    <% form_for :fine, :url => {:action => 'update_defaulters_fine_ajax',:batch_id=>@batch.id } do |form| %>
      <div class="box">
        <div class="label-field-pair">
          <div class="text-input-bg">
            <%= form.text_field :fee, :value=>'' ,:id=>"fine_fee", :class=>'precision_text' %></div>
            <%= form.hidden_field :student, :value => @student.id %>
            <%= form.hidden_field :date, :value => @date.id %>
        </div>
        <%=  submit_tag "â–º #{t('add_fine')}",:class=>'submit_button2',:id => 'fine_button',:onclick=>'return validate_fine();' %>
      <% end %>
    </div>
  </div>
<% end %>
