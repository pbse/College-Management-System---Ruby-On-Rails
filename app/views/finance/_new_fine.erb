 <% remote_form_for @fine,
        :url => {:action => 'fine_slabs_edit_or_create'},:html=>{} do |form1| %>
<div id="form-errors"><%= error_messages_for 'fine' %></div>
        <div class="label-field-pair">
          <label for="reason">  <%= t('fine_name') %> <span class="necessary-field">*</span></label>
          <div class="text-input-bg"><%= form1.text_field :name%></div>
        </div>
      <div id="add">
        <div id="remove-slab">
      <hr  />
        
        <div class="label-field-pair">
          <label for="reason">  <%= t('days_after_due_date') %> <span class="necessary-field">*</span></label>
          <div class="text-input-bg" id="days_input"><%= text_field_tag  "fine[fine_rules_attributes][#{Time.now.to_i}][fine_days]",value= "",options={:class=>"precision_text"}%></div>
        </div>
        <div class="label-field-pair">
          <label for="reason">  <%= t('fine_amount') %> <span class="necessary-field">*</span></label>
          <div class="text-input-bg"><%= text_field_tag  "fine[fine_rules_attributes][#{Time.now.to_i}][fine_amount]",value= precision_label(0),options={:class=>"precision_text"}%></div>
        </div>
        <div class="label_field_pair">
          <div class="fine-mode" >
            <label class="label_for_student_gender" for="is_amount"><%= t('discount_type') %></label>
          </div>
          <div class="student_gender_value" >
            <label class="label_for_gender" for="is_amount_false"> <%= t('percentage') %></label>
            <%= radio_button_tag   "fine[fine_rules_attributes][#{Time.now.to_i}][is_amount]", value =false,checked="checked"%>
            <label class="label_for_gender" for="is_amount_true"><%= t('amount') %></label>
            <%= radio_button_tag  "fine[fine_rules_attributes][#{Time.now.to_i}][is_amount]" ,value =true%>
          </div>
        </div></div></div>
      <hr  />
        <div class="extender"></div>
       
        <div id="link">
          <%= link_to_function "#{image_tag "buttons/add_2.png" } #{t('add_fine_slab')}","add_fine_slab(this);"%>
          </div>
       
        <div id="submit-button">
          <%=  submit_tag "► #{t('create_text')}",:class=>'submit_button',:disable_with => "► #{t('create_text')}" %>
        </div>
      <% end %>