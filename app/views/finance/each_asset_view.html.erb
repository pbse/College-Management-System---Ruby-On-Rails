<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('asset_view') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= @asset.title %></div>
</div>
<div id="page-yield">


  <div id="asset-body">
    <div id="asset-title"><%= t('asset_name') %> : <%= @asset.title%></div>
    <div id="asset-description"><%= @asset.description %></div>
    <br/> 
    <div id="asset-amt" class="themed_text"><%= t('amount') %> : <%=  @currency_type + " "%><%= precision_label(@asset.amount) %></div>
    <div id="asset-date" class="themed_text"><%= t('created_at') %> : <%= I18n.l(@asset.created_at,:format=>"%A, %d %B, %Y") %></div>
    </div>



</div>
