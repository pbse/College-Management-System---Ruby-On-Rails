<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('department_wise_salary_report') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('finance_transactions') %></div>

</div>
<div id="page-yield">
  <div class="bread_crumb">

    <%= link_to t('finance_text'), :controller => "finance", :action=>"index" %> <div class = "bread-crumb-separator"> > </div>
    <%= link_to "#{t('finance_reports')}", :controller => "finance", :action => "finance_reports" %><div class = "bread-crumb-separator"> > </div>
    <%= link_to "#{t('monthly_transactions')}", :controller => "finance", :action => "monthly_report" %> <div class = "bread-crumb-separator"> > </div>
    <%= link_to "#{t('finance_transactions_view')}", :controller => "finance", :action => "update_monthly_report", :start_date=>@start_date, :end_date=>@end_date %> <div class = "bread-crumb-separator"> > </div>

    <%= t('salary_account') %>
  </div>
  <% total=0 %>
  <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
    <tr class="tr-head">
      <td><%= t('sl_no') %></td>
      <td><%= t('particulars') %></td>
      <td><%= t('amount') %>( <%= currency %> )</td>
    </tr>
    <tr class="tr-blank"></tr>
    <%@departments.each_with_index do |d,i|%>
      <tr class="tr-<%= cycle("even","odd") %>">
        <td class ="col-1"><%=i+1%></td>
        <td class="col-2"><%=link_to d.name,:action => 'salary_employee',:start_date => @start_date,:end_date =>@end_date,:id => d.id %></td>
        <td class="col-3" align="right"><%=precision_label(d.amount)  %> </td>
        <% total += d.amount %>
      </tr>
    <% end %>
    <tr class="tr-blank"></tr>
    <tr class="tr-head">
      <td><%= t('total') %></td>
      <td></td>
      <td align="right"><%=precision_label(total)%></td>
    </tr>
  </table>
</div>
