<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('full_leave_reset') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('reset_leave_count_for_all') %></div>

</div>
<div id="page-yield">
  <div id="box">

    <div class="bread_crumb">
      <%= link_to t('hr'), :controller => "employee", :action=>"hr" %> <div class = "bread-crumb-separator"> > </div>
      <%= link_to t('employee_leave_management'), :controller => "employee", :action => "employee_attendance" %> <div class = "bread-crumb-separator"> > </div>
      <%= link_to t('reset_leave'), :controller => "employee_attendance", :action => "manual_reset" %> <div class = "bread-crumb-separator"> > </div>
      <%= t('reset_all') %>
    </div>
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
    <div id="main-reset-box">
      <div id="reset-box">
        <p> <%= t('reset_count_msg') %></p>
        <div id="skip">
          <%= link_to_remote("► #{t('reset')}",
            :url => {:action =>'update_employee_leave_reset_all'}, :html => {:class=>"user_button"},:loading => "$('loader').show();", :loaded => "$('loader').hide();" ) %>
        </div>
        <div id="skip_loader">
          <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %>
        </div>
        <div>
          <%= link_to "► #{t('cancel')}", { :action => "manual_reset"}, :class=>"user_button" %>
        </div>


      </div>
    </div>
    

  </div>


</div>
