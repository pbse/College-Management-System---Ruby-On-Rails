<div id="content-header">
<%= show_header_icon %>
  <h1><%= t('class_timing_sets') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('manage_class_timing_sets') %></div>

<div id="inner-tab-menu">
  <ul>
    <li class='themed_bg themed-dark-hover-background'><%= link_to "#{t('class_timing_sets')}", class_timing_sets_path %></li>
  </ul>
</div>

</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <% form_for @class_timing_set do |f| %>
    <%= f.error_messages %>
    <div class="label-field-pair">
      <label for="name"><%= t('name') %><span class="necessary-field">*</span></label>
      <div class="text-input-bg"><%= f.text_field :name %></div>
    </div>
    <%= f.submit t('submit'), :class => 'submit-button', :disable_with=>"Please Wait..." %>
  <% end %>
</div>

<script type="text/javascript">
  $$('form').invoke('observe', 'submit', function(evt){
    evt.stop();
  });
</script>
