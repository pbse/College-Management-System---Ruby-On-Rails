<% content_for :head do  %>
  <%= stylesheet_link_tag("observation_groups/show.css") %>
<% end %>
<div id="content-header">
<%= show_header_icon %>
  <h1>CCE Weightages</h1>
<div class='header-sep'>|</div>
<div class='sub-header'>Assigned courses</div>
<div id="inner-tab-menu">
  <ul>
  </ul>
</div>

</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= link_to t('cce_weightages'), cce_weightages_path %> <div class = "bread-crumb-separator"> > </div>
    <%= "#{@weightage.weightage}(#{@weightage.criteria_type})" %>
  </div>
  <div id="flash-box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  </div>
  <div class="title">
    <%= t("weightage_text") %>
    <div class="description">:&nbsp;&nbsp;&nbsp;<%= @weightage.weightage %></div>
  </div>
  <div class="title">
    <%= t("criteria_type") %>
    <div class="description">:&nbsp;&nbsp;&nbsp;<%= @weightage.criteria_type %></div>
  </div>
  <div id="courses">
    <%= render  :partial=>'courses' %>
  </div>
  <div id="modal-box" style="display:none;"></div>
</div>
