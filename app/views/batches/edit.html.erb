<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('batch') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= t('edit_batch') %></div>


</div>
<div id="page-yield">


  <div class="box">
    <div class="bread_crumb">
      <%= link_to "#{t('courses_text')}", courses_path %> <div class = "bread-crumb-separator"> > </div>
      <%= link_to @course.full_name, @course %> <div class = "bread-crumb-separator"> > </div>
      <%= link_to "#{t('batch')} #{@batch.name}" %> <div class = "bread-crumb-separator"> > </div>
      <%= t('edit_text') %>
    </div>

    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>

    <% form_for [@course, @batch] do |f| %>
      <%= f.error_messages  %>
      <div class="label-field-pair">
        <div class="label-container"><%= t('name') %></div>
        <div class="input-container"><%= f.text_field :name %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><%= t('start_date') %></div>
        <div class="input-container"><%= calendar_date_select_tag 'batch[start_date]',I18n.l(@batch.start_date.to_date, :format=>:default), :popup => "force"%></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><%= t('end_date') %></div>
        <div class="input-container"><%= calendar_date_select_tag 'batch[end_date]',I18n.l(@batch.end_date.to_date, :format=>:default) ,:popup => "force"%></div>
      </div>

      <%= submit_tag "", :value => "â–º #{t('save')}", :class => "submit_button" %>


    <% end %>

    <div class="extender"></div>
  </div>
</div>
