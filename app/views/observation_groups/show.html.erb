<div id="content-header">
<%= show_header_icon %>
  <h1>Co Scholastic Group</h1>
<div class='header-sep'>|</div>
<div class='sub-header'>Co Scholastic Criterias</div>
<div id="inner-tab-menu">
  <ul>
    <li class='themed_bg themed-dark-hover-background'><%= link_to_remote "#{t('new_text')}", :url => { :action => 'new_observation', :id => @obs_group.id } %></li>
  </ul>
</div>

</div>
<div id="page-yield">
  
  <div class="bread_crumb">
    <%= link_to t('observation_groups'), observation_groups_path %> <div class = "bread-crumb-separator"> > </div>
    <%= t('observation_group') %> <%= @obs_group.name %>
  </div>
  <div id="flash-box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  </div>
  <div class="title">
    <%= t("name_text") %>
    <div class="description">:&nbsp;&nbsp;&nbsp;<%= @obs_group.name %></div>
  </div>
  <div class="title"><%= t("header_name") %>
    <div class="description">:&nbsp;&nbsp;&nbsp;<%= @obs_group.header_name %></div>
  </div>
  <div class="title"><%= t("description_text") %>
    <div class="description">:&nbsp;&nbsp;&nbsp;<%= @obs_group.desc %></div>
  </div>
  <div class="title"><%= t("grade_set") %>
    <div class="description">:&nbsp;&nbsp;&nbsp;<%= @obs_group.cce_grade_set.name %></div>
  </div>
  <div id="observations">
    <%= render  :partial=>'observations' %>
  </div>
  <div id="modal-box" style="display:none;"></div>
</div>
