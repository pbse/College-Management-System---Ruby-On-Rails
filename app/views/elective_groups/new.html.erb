<div id="content-header">
<div class='header-icon batches-icon'></div>
 <h1><%= t('batches_text') %></h1>
<div class='header-sep'>|</div>
<div class='sub-header'><%= "#{t('new_elective')}" %></div>
<div id="inner-tab-menu">
  <ul>
    <li class='themed_bg themed-dark-hover-background'><%= link_to t('new_text'), new_batch_elective_group_path(@batch) %></li>

  </ul>
</div>
</div>
<div id="page-yield">


  <div class="bread_crumb">
    <%= link_to t('course_text'), courses_path %> <div class = "bread-crumb-separator"> > </div>
    <%= link_to @course.full_name, @course %> <div class = "bread-crumb-separator"> > </div>
    <%= link_to "#{t('batch')} #{@batch.name}", [@course, @batch] %> <div class = "bread-crumb-separator"> > </div>
    <%= link_to "#{t('electives')}", batch_elective_groups_path(@batch) %> <div class = "bread-crumb-separator"> > </div>
    <%= t('new_text') %>
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="box">


    <% form_for [@batch, @elective_group] do |f| %>
      <%= f.error_messages :header_message => nil %>

      <div class="label-field-pair">
        <div class="label-container"> <%= f.label "#{t('name')}" %></div>
        <div class="input-container"><%= f.text_field :name %></div>
      </div>

      <%= submit_tag "", :value => "► #{t('save')}", :class => "submit_button", :disable_with => "► #{t('please_wait')}" %>

    <% end %>

    <div class="extender"></div>
  </div>
</div>
<script type="text/javascript">
  $$('form').invoke('observe', 'submit', function(evt){
    evt.stop();
  });
</script>
